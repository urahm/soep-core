{
  "name": "soep-core",
  "schema": "tabular-data-package",
  "profile": "tabular-data-package",
  "resources": [
    {
      "path": "publications.csv",
      "profile": "tabular-data-resource",
      "name": "publications",
      "title": "Publications",
      "format": "csv",
      "mediatype": "text/csv",
      "encoding": "utf-8",
      "schema": {
        "fields": [
          {
            "name": "name",
            "title": "Name",
            "description": "Name of the publication",
            "type": "string",
            "format": "default",
            "constraints": {
              "required": true,
              "maxLength": 255
            }
          },
          {
            "name": "title",
            "title": "Title",
            "description": "Title of the publication (including sub-title)",
            "type": "string",
            "format": "default",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "author",
            "title": "Author",
            "description": "Name(s) of the author(s)",
            "type": "string",
            "format": "default"
          },
          {
            "name": "year",
            "title": "Year",
            "description": "Year of publication (year as four digits)",
            "type": "string",
            "format": "default"
          },
          {
            "name": "abstract",
            "title": "Abstract",
            "description": "Abstract of the publication",
            "type": "string",
            "format": "default"
          },
          {
            "name": "cite",
            "title": "Cite",
            "description": "Suggested citation of the publication",
            "type": "string",
            "format": "default"
          },
          {
            "name": "sub_type",
            "title": "Sub type",
            "description": "Type of publication (e.g., journal article or dissertation)",
            "type": "string",
            "format": "default",
            "constraints": {
              "maxLength": 255
            }
          },
          {
            "name": "studies",
            "title": "Studies",
            "description": "Description of studies/data sources used in the publication",
            "type": "string",
            "format": "default"
          },
          {
            "name": "url",
            "title": "URL",
            "description": "URL referencing the publication",
            "type": "string",
            "format": "default"
          },
          {
            "name": "doi",
            "title": "DOI",
            "description": "DOI for the publication (DOI only, not the URL to the DOI)",
            "type": "string",
            "format": "default"
          }
        ]
      }
    }
  ]
}
